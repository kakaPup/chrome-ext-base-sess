{
    "manifest_version": 3,
    "name": "chrome-extension-name",
    "description": "chrome extension",
    "version": "1.0.0",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html"
}